{
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "declarationDir": "./lib", // Output directory for .d.ts files
        "outDir": "./lib",         // Output directory for .js files
        "module": "ESNext",
        "moduleResolution": "Node",
        "target": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}
